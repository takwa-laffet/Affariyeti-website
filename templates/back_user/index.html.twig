
 {% extends '/admin/admin.html.twig' %}
{% block title %}Users List{% endblock %}

{% block body %} 
 <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Users List</h3>
              </div>
              <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form action="/search-users" method="POST">
                        <div class="input-group">
                            <input type="search" id="searchValue" name="searchValue" class="form-control form-control-lg" placeholder="Type your keywords here">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class=" typcn typcn-zoom-outline"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nom | default('-') }}</td>
                    <td>{{ user.prenom | default('-') }}</td>
                    <td>{{ user.role }}</td>

                     <td style="color: {{ user.status ? 'green' : 'red' }}">
                        {{ user.status ? 'Active' : 'Inactive' }}
                    </td>
                   <td>
                        <a href="{{ path('toggle_user_active', {'id': user.id}) }}">
                           
                                <p style="color: {{ user.status ? 'red' : 'green' }}">  Make {{ user.status ? 'Inactive' : 'Active' }}</p>
                           
                        </a>
                    </td>
                </tr>
            {% endfor %}
                  </tbody>
                  <tfoot> 
                  <tr>
                      <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
            </div>

           
          </div>
        </div>
      </div>
    </section>
{% endblock %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiques des Publications par Nombre de Likes</title>
    <!-- Inclure les fichiers CSS de Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Inclure les fichiers JavaScript de Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <canvas id="myChart" width="400" height="400"></canvas>
    </div>

    <script>
        // Récupérer les données des statistiques (par exemple depuis le contrôleur)
        var statsData = {
            '0': {{ statsData['0'] ?? 0 }},
            '1': {{ statsData['1'] ?? 0 }},
            '2': {{ statsData['2'] ?? 0 }},
            '3': {{ statsData['3'] ?? 0 }},
            '4': {{ statsData['4'] ?? 0 }},
            '5+': {{ statsData['5+'] ?? 0 }},
        };

        // Récupérer les libellés et les valeurs pour la pie chart
        var labels = Object.keys(statsData);
        var values = Object.values(statsData);

        // Créer la pie chart
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de publications par nombre de likes',
                    data: values,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Ajoutez des options supplémentaires si nécessaire
            }
        });
    </script>
</body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Product Category Chart{% endblock %}

{% block body %}
    <h1>Product Count by Category Pie Chart</h1>
    <div style="border: 1px solid #ccc; padding: 10px; width: 400px;">
        <canvas id="productCountByCategoryChart" width="300" height="300"></canvas>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var categoriesData = {{ categoriesData|json_encode|raw }};
            var ctx = document.getElementById('productCountByCategoryChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: Object.keys(categoriesData),
                    datasets: [{
                        label: 'Number of Products',
                        data: Object.values(categoriesData),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                            // Add more colors if needed
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                            // Add more colors if needed
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    // Add your options here, if needed
                }
            });
        });
    </script>
{% endblock %}

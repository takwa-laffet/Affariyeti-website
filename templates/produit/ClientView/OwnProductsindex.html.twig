<div id="OverstockBrand">
    {% for produit in produits %}
        <div class="product-card">
            <img src="{{ asset('tn.esprit.affariety.image/' ~ produit.imageP) }}" alt="" />
            <p><b>{{ produit.nomP }}</b></p>
            <p>{{ produit.descriptionP }}</p>
            <p>{{ produit.prixP }}</p>
            <!-- Ajoutez les liens d'édition et de suppression comme dans l'exemple précédent -->
            <a href="{{ path('app_produit_edit' , {'id_client': id_client , 'idC': produit.idC.idC , 'idP': produit.idP}) }}">Edit </a>
            <form action="{{ path('app_produit_delete', {'idP': produit.idP , 'id_client' : id_client}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?')">
                <input type="hidden" name="id_client" value="{{ id_client }}">
                <input type="hidden" name="idC" value="{{ produit.idC }}">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.idP) }}">
                <button type="submit">Delete</button>
            </form>
        </div>
    {% else %}
        <p>No records found</p>
    {% endfor %}
</div>


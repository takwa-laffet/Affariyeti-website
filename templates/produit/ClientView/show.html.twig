            <div class="text-center">
                <a href="{{ path('app_produit_index',{'id_client': id_client , 'idC': produit.idC.idC , 'idP': produit.idP}) }}" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Back</a>
            </div>

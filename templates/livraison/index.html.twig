{% extends 'admin/base_admin.html.twig' %}

{% block content %}

{% block stylesheets %}
    <style>
        /* Custom styles for the table and chart */
        .table-container {
            margin: 20px auto;
            width: 80%;
        }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container th,
        .table-container td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table-container th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
        }

        .table-container tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table-container tr:hover {
            background-color: #ddd;
        }

        .table-container .actions a {
            margin-right: 5px;
            text-decoration: none;
            color: #007bff;
        }

        .table-container .actions a:hover {
            color: #0056b3;
        }

        .table-container .actions a.edit {
            color: #ffc107;
        }

        .table-container .actions a.edit:hover {
            color: #d39e00;
        }

        .table-container .actions a.delete {
            color: #dc3545;
        }

        .table-container .actions a.delete:hover {
            color: #bd2130;
        }

        .chart-container {
            margin: 20px auto;
            width: 80%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="table-container">
        <a href="{{ path('app_livraison_new') }}" class="btn btn-primary">Create New</a>
    </div>

    <h2>statistics</h2>
    <div class="chart-container">
        <canvas id="deliveryStatisticsChart" width="800" height="400"></canvas>
    </div>

    <h2>List of Deliveries</h2>
    <table class="table">
        <!-- Table Header -->
        <thead>
            <tr>
                <th>Id</th>
                <th>Address Livraison</th>
                <th>Date Commande</th>
                <th>Date Livraison</th>
                <th>Status Livraison</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Depot</th>
                <th>Actions</th>
            </tr>
        </thead>
        <!-- Table Body -->
        <tbody>
            {% for livraison in livraisons %}
            <tr>
                <td>{{ livraison.id }}</td>
                <td>{{ livraison.adresselivraison }}</td>
                <td>{{ livraison.datecommande ? livraison.datecommande|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ livraison.datelivraison ? livraison.datelivraison|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ livraison.statuslivraison }}</td>
                <td>{{ livraison.latitude }}</td>
                <td>{{ livraison.longitude }}</td>
                <td>{{ livraison.iddepot}}</td>
                <td>
                    <a href="{{ path('app_livraison_show', {'id': livraison.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_livraison_pdf', {'id': livraison.id}) }}" class="btn btn-success">Generate PDF</a>
                    <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}" class="btn btn-warning">Edit</a>
                       {{ include('livraison/_delete_form.html.twig') }}

                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9" class="no-records">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

   <!-- Pagination -->
  

    <!-- JavaScript for rendering the line chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var ctx = document.getElementById('deliveryStatisticsChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [{% for stat in statistics %} '{{ stat.adresselivraison }}', {% endfor %}],
                    datasets: [{
                        label: 'Total Deliveries',
                        data: [{% for stat in statistics %} {{ stat.totalDeliveries }}, {% endfor %}],
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
        
    </script>
      <nav aria-label="Page navigation" class="pagination">
        {{ knp_pagination_render(livraisons) }}
    </nav>

{% endblock %}
{% endblock %}

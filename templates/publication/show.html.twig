{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    {% block content %}
        <h1>Publication</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>IdPub</th>
                    <td>{{ publication.idPub }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ publication.contenu }}</td>
                </tr>
                <tr>
                    <th>NbLikes</th>
                    <td>{{ publication.nbLikes }}</td>
                </tr>
                <tr>
                    <th>NbDislike</th>
                    <td>{{ publication.nbDislike }}</td>
                </tr>
                <tr>
                    <th>DatePub</th>
                    <td>{{ publication.datePub ? publication.datePub|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td> {% if publication.photo %}
                            <img src="{{ asset(publication.photo) }}" alt="Photo" style="width: 100px; height: 95px; height: auto; border-radius: 0;">
                        {% else %}
                            Aucune photo
                        {% endif %}</td>
                </tr>
            </tbody>
        </table>

          <a href="{{ path('app_publication_comments', {'idPub': publication.idPub}) }}">Voir les Commentaires</a>
        <a href="{{ path('app_publication_edit', {'idPub': publication.idPub}) }}">edit</a>
       {{ include('publication/_delete_form.html.twig') }}
  <a href="{{ path('app_publication_index') }}">back to list</a>

    {% endblock %}
{% endblock %}
